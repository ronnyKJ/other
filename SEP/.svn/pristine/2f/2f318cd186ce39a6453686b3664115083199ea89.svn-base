.header, .main, .footer{
	width: 100%;
	text-align: center;
}

.middle{
	width: 900px;
	margin: 0 auto;
	position: relative;
}

html, body, ul, h1{
	margin: 0;
	padding: 0;
	/*list-style: none;*/
}

.header{
	text-align: left;
	padding-top: 1px;
	height: 75px;
}

.logo{
	width: 230px;
	margin-top: 15px;
	color: #474e5d;
}

.logo .left{
	font-size: 50px;
}

.logo .right{
	float: right;
	margin-top: -46px;
}

.logo .right .up{
	font-size: 14px;
	height: 20px;
}

.logo .right .down{
	font-size: 19px;
}

.main{
	position: relative;
	background: #fafafa;
}

.banner-bg{
	position: absolute;
	top: 0;
	width: 100%;
	height: 160px;
	background: url(../img/banner-bg.png);
}

.banner{
	color: #FFF;
	height: 160px;
}

.banner h1{
	font-size: 26px;
	padding-top: 25px;
}

.banner ul.products{
	margin-top: 25px;
}

.banner ul.products li{
	display: inline-block;
	margin: 0 14px;
	font-size: 12px;
}

.banner ul.products li .icon{
	margin-bottom: 8px;
}

.category{
	margin-top: 60px;
	height: 300px;
}

.category .entry{
	display: inline-block;
	width: 150px;
	margin: 0 50px;
	vertical-align:top;
}

.category .entry ul{
	text-align: left;
	margin: 15px 0 0 37px;
	font-size: 14px;
	list-style: none;
}

.category .entry ul li{
	margin: 10px 0;
}

.category .type{
	width: 100%;
	height: 40px;
	line-height: 40px;
	font-size: 19px;
	margin-top: 10px;
	text-indent: -10px;
}

.category .type-1{
	border-left: #f2d77b 5px solid;
}

.category .type-2{
	border-left: #f3787a 5px solid;
}

.category .type-3{
	border-left: #39dcc8 5px solid;
}

.footer{
	font-size: 14px;
	padding: 30px 0 10px;
}